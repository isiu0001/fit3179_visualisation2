{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Stacked bar chart comparing state and capital city populations.",
    "width": 550,
    "height": 350,
    "data": {
      "url": "data/aus_state_capital_population.csv"
    },
    "transform": [
      {
        "fold": ["State Population", "Capital City Population"],
        "as": ["Population Type", "Population"]
      },
      {
        "calculate": "datum.State == 'Australian Capital Territory' ? 'ACT' : datum.State == 'New South Wales' ? 'NSW' : datum.State",
        "as": "State"
      }
    ],
    "mark":{ 
      "type":"bar",
      "opacity": 0.7  
  
    },
    "encoding": {
      "x": {
        "field": "State",
        "type": "nominal",
        "axis": {
          "title": "State",
          "labelAngle": 0,
          "titleFontSize": 15,
          "labelFontSize": 10
        },
        "sort": ["South Australia", "Queensland", "ACT", "Northern Territory", "Tasmania", "Victoria", "Western Australia", "NSW"]  
      },
      "y": {
        "field": "Population",
        "type": "quantitative",
        "axis": {
          "title": "Population",
          "titleFontSize": 15,
          "labelFontSize": 12
        }
      },
      "color": {
        "field": "Population Type",
        "type": "nominal",
        "scale": {
          "range": ["#1f77b4", "#ff7f0e"]
        },
        "legend": {
          "title": "Population Type",
          "titleFontSize": 12,
          "labelFontSize": 10
        }
      },
      "tooltip": [
        {"field": "State", "type": "nominal", "title": "State"},
        {"field": "Population Type", "type": "nominal", "title": "Population Type"},
        {"field": "Population", "type": "quantitative", "title": "Population"}
      ]
    }
  }
  
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "data": {
    "url": "data/major_city_humidity.csv"
  },
  "mark": {
    "type": "bar",
    "width": 70,
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "Location",
      "type": "nominal",
      "axis": {
        "title": "City",
        "labelAngle": 0,
        "titleFontSize": 15,
        "labelFontSize": 12
      }
    },
    "y": {
      "field": "AvgHumidity",
      "type": "quantitative",
      "axis": {
        "title": "Average Humidity (%)",
        "titleFontSize": 15,
        "labelFontSize": 12,
        "titlePadding": 20
      },
      "scale": {
        "domain": [0, 70]
      }
    },
    "color": {
      "field": "Location",
      "type": "nominal",
      "legend": {
        "title": "City",
        "titleFontSize": 12,
        "labelFontSize": 10
      },
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "Location",
        "type": "nominal",
        "title": "City"
      },
      {
        "field": "AvgHumidity",
        "type": "quantitative",
        "title": "Average Humidity (%)"
      }
    ]
  }
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "data": {
    "url": "data/major_city_humidity.csv"
  },
  "layer":[
    {
      "mark": {
        "type": "bar",
        "width": 70,
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "Location",
          "type": "nominal",
          "axis": {
            "title": "City",
            "labelAngle": 0,
            "titleFontSize": 15,
            "labelFontSize": 12
          }
        },
        "y": {
          "field": "AvgHumidity",
          "type": "quantitative",
          "axis": {
            "title": "Average Humidity (%)",
            "titleFontSize": 15,
            "labelFontSize": 12,
            "titlePadding": 20
          },
          "scale": {
            "domain": [0, 70]
          }
        },
        "color": {
          "field": "Location",
          "type": "nominal",
          "legend": {
            "title": "City",
            "titleFontSize": 12,
            "labelFontSize": 10
          },
          "scale": {
            "scheme": "tableau10"
          }
        },
        "tooltip": [
          {
            "field": "Location",
            "type": "nominal",
            "title": "City"
          },
          {
            "field": "AvgHumidity",
            "type": "quantitative",
            "title": "Average Humidity (%)"
          }
        ]
      }
    },
    {
     
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "font": "Helvetica",
        "fontWeight": 100
      },
      "encoding": {
        "x": {
          "value": 5
        },
        "y": {
          "value": 20
        },
        "text": {
          "value": "Whill most city has similar humidity level, Adelaide "
        },
        "color": {"value": "#49494a"}
      }
    },

    {
     
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "font": "Helvetica",
        "fontWeight": 100
      },
      "encoding": {
        "x": {
          "value": 5
        },
        "y": {
          "value": 40
        },
        "text": {
          "value": "show relatively low humidity, indicating a potentially"
        },
        "color": {"value": "#49494a"}
      }
    },

    {
     
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 13,
        "font": "Helvetica",
        "fontWeight": 100
      },
      "encoding": {
        "x": {
          "value": 5
        },
        "y": {
          "value": 60
        },
        "text": {
          "value": "distinct climate type"
        },
        "color": {"value": "#49494a"}
      }
    },

    {
      "mark": {
        "type": "point",
        "shape": "triangle",
        "size": 80,
        "angle": 180,
        "align": "center"
      },
      "encoding": {
        "x": {
          "value": 55
        },
        "y": {
          "value": 90
        },
        "color": {"value": "black"}
      }
    }
  


  ]
}

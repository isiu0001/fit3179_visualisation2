{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "data": {
    "url": "data/major_city_avg_max_temp3.csv"
  },
  "params": [
    {
      "name": "citySelection",
      "bind": {
        "input": "select",
        "options": ["All", "Sydney", "Melbourne", "Brisbane", "Perth", "Adelaide", "Hobart", "Darwin"],
        "name": "Select City"
      },
      "value": "All"
    }
  ],
  "transform": [
    {
      "filter": "citySelection == 'All' || datum.Location == citySelection"
    },
    {
      "calculate": "round(datum.MaxTemp * 100) / 100",
      "as": "RoundedMaxTemp"
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "title": "Year", 
            "orient": "bottom",
            "labelAngle": 0,
            "titleFontSize": 15,
            "labelFontSize": 12,
            "titlePadding": 10
          } 
        },
        "y": {
          "field": "MaxTemp",
          "type": "quantitative",
          "axis": {
            "title": "Average Maximum Temperature (°C)",
            "titleFontSize": 15,
            "labelFontSize": 12,
            "titlePadding": 20
          },
          "scale": {
            "domain": [10, 40]
          }
        },
        "color": {
          "field": "Location",
          "type": "nominal",
          "legend": {
            "title": "Capital Cities"
          },
          "scale": {
            "scheme": "tableau10"
          }
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "RoundedMaxTemp", "type": "quantitative", "title": "Avg Max Temperature (°C)"},
          {"field": "Location", "type": "nominal", "title": "City"}
        ]
      }
    },
    {
      "mark": "point",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": null
          
        },
        "y": {
          "field": "MaxTemp",
          "type": "quantitative"
        },
        "color": {
          "field": "Location",
          "type": "nominal"
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "RoundedMaxTemp", "type": "quantitative", "title": "Avg Max Temperature (°C)"},
          {"field": "Location", "type": "nominal", "title": "City"}
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "citySelection == 'All' || citySelection == 'Darwin'"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 12
      },
      "encoding": {
        "x": {
          "value": 370
        },
        "y": {
          "datum": 34.9
        },
        "text": {
          "value": "Darwin is the hottest city, with the highest maximum temperature throughout all years"
        },
        "color": {"value": "black"}
      }
    },
    {
      "transform": [
        {
          "filter": "citySelection == 'All' || citySelection == 'Darwin'"
        }
      ],
      "mark": "rule",
      "encoding": {
        "x": {
          "datum": 2015
        },
        "y": {
          "datum": 28.5
        },
        "y2": {
          "datum": 27.6
        },
        "color": {"value": "black"},
        "strokeDash": [4, 2]
      }
    },
    {
      "transform": [
        {
          "filter": "citySelection == 'All' || citySelection == 'Darwin'"
        }
      ],
      "mark": {
        "type": "point",
        "shape": "triangle",
        "size": 80,
        "angle": 180,
        "align": "center"
      },
      "encoding": {
        "x": {
          "value": 585  
        },
        "y": {
          "datum": 33.8
        },
        "color": {"value": "black"}
      }
    }
  ]
}